#!/bin/bash

# Define the file paths
SYNC_FILE_R="/tmp/receiver_prepared"
SYNC_FILE_S="/tmp/sender_prepared"

# Function to delete a file if it exists
delete_file() {
    local file=$1
    if [ -e "$file" ]; then
        echo "Deleting $file..."
        rm "$file"
        if [ $? -eq 0 ]; then
            echo "$file deleted successfully."
        else
            echo "Failed to delete $file."
        fi
    else
        echo "$file does not exist."
    fi
}

# Delete the files
delete_file "$SYNC_FILE_R"
delete_file "$SYNC_FILE_S"

echo "Cleanup complete."
